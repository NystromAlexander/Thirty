<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/first_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white1"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/second_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white2"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/third_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white3"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/fourth_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white4"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/fifth_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white5"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/sixth_die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white6"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/low_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_low"/>
            <Button
                android:id="@+id/four_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_four"/>
            <Button
                android:id="@+id/five_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_five"/>
            <Button
                android:id="@+id/six_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_six"/>
            <Button
                android:id="@+id/seven_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_seven"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/eight_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_eight"/>
            <Button
                android:id="@+id/nine_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_nine"/>
            <Button
                android:id="@+id/ten_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_ten"/>
            <Button
                android:id="@+id/eleven_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_eleven"/>
            <Button
                android:id="@+id/twelve_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_twelve"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/throw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/dice_roll"/>
</LinearLayout>